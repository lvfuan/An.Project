        var pageCount = '@pageCount';
        var $_pageSize = 10;
        $(function () {
            $("#pageCount").text(pageCount);
        })
        var json = JSON.parse(data);
        var pageTable = new Vue({
            el: '#pageTable',
            data: json
        })

        var app = new Vue({
            el: '#app',
            data: {
                // 当前页码
                cur: 1,
                // 总页数
                all: pageCount,
                msg: ''
            },
            components: {
                // 引用组件
                'vue-pagination': Vue.Pagination
            },
            methods: {
                listen: function (data) {
                    // 翻页事件
                    this.msg = '当前页码：' + data
                }
            }
        })




