<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Master</title>
    <link rel="shortcut icon" href="~/Content/images/logo8.png" type="image/x-icon">
    <!--Layui-->
    <link href="~/Content/plug/layui/css/layui.css" rel="stylesheet" />
    <!--font-awesome-->
    <link href="~/Content/plug/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- animate.css -->
    <link href="~/Content/css/animate.min.css" rel="stylesheet" />
    <!--全局样式表-->
    <link href="~/Content/css/global.css" rel="stylesheet" />
    <link href="~/Content/css/prettify.css" rel="stylesheet" />
    <script src="~/Content/js/jquery-1.8.3.min.js"></script>
    <!-- layui.js -->
    <script src="~/Content/plug/layui/layui.js"></script>
    <!-- 全局脚本 -->
    <script src="~/Content/js/global.js"></script>  
    <script src="~/Content/js/prettify.js"></script>
</head>
<body>
    <!-- 导航 -->
    <nav class="blog-nav layui-header">
        <div class="blog-container">
            <!-- QQ互联登陆 -->
            <a href="@Url.Action("Home/SignIn")" class="blog-user">
                <i class="fa fa-qq"></i>
            </a>
            <a href="javascript:;" class="blog-user layui-hide">
                <img src="~/Content/images/Absolutely.jpg" alt="Absolutely" title="Absolutely" />
            </a>
            <!--   -->
            <a class="blog-logo" href="home.html"> </a>
            <!-- 导航菜单 -->
            <ul class="layui-nav" lay-filter="nav"  id="menu_ul">  
                <li class="layui-nav-item" id="index">
                    <a href="@Url.Action("Index")"><i class="fa fa-home fa-fw"></i>&nbsp;网站首页</a>
                </li>
                <li class="layui-nav-item" id="article">
                    <a href="@Url.Action("Article")"><i class="fa fa-file-text fa-fw"></i>&nbsp;文章专栏</a>
                </li>
                <li class="layui-nav-item" id="resource">
                    <a href="@Url.Action("Resource")"><i class="fa fa-tags fa-fw"></i>&nbsp;资源分享</a>
                </li>
                <li class="layui-nav-item" id="timeline">
                    <a href="@Url.Action("Timeline")"><i class="fa fa-hourglass-half fa-fw"></i>&nbsp;点点滴滴</a>
                </li>
                <li class="layui-nav-item" id="about">
                    <a href="@Url.Action("About")"><i class="fa fa-info fa-fw"></i>&nbsp;关于本站</a>
                </li>
            </ul>
            <!-- 手机和平板的导航开关 -->
            <a class="blog-navicon" href="javascript:;">
                <i class="fa fa-navicon"></i>
            </a>
        </div>
    </nav>
    @RenderBody()
    <!-- 底部 -->
    <footer class="blog-footer">
        <p><span>Copyright</span><span>&copy;</span><span>2017</span><a href="http://www.lyblogs.cn"> </a><span>Design By LY</span></p>
        <p><a href="http://www.miibeian.gov.cn/" target="_blank">蜀ICP备16029915号-1</a></p>
    </footer>
    <!--侧边导航-->
    <ul class="layui-nav layui-nav-tree layui-nav-side blog-nav-left layui-hide" lay-filter="nav">
        <li class="layui-nav-item">
            <a href="@Url.Action("Index")"><i class="fa fa-home fa-fw"></i>&nbsp;网站首页</a>
        </li>
        <li class="layui-nav-item layui-this">
            <a href="@Url.Action("Article")"><i class="fa fa-file-text fa-fw"></i>&nbsp;文章专栏</a>
        </li>
        <li class="layui-nav-item">
            <a href="@Url.Action("Resource")"><i class="fa fa-tags fa-fw"></i>&nbsp;资源分享</a>
        </li>
        <li class="layui-nav-item">
            <a href="@Url.Action("Timeline")"><i class="fa fa-road fa-fw"></i>&nbsp;点点滴滴</a>
        </li>
        <li class="layui-nav-item">
            <a href="@Url.Action("About")"><i class="fa fa-info fa-fw"></i>&nbsp;关于本站</a>
        </li>
    </ul>
    <!--分享窗体-->
    <div class="blog-share layui-hide">
        <div class="blog-share-body">
            <div style="width: 200px;height:100%;">
                <div class="bdsharebuttonbox">
                    <a class="bds_qzone" data-cmd="qzone" title="分享到QQ空间"></a>
                    <a class="bds_tsina" data-cmd="tsina" title="分享到新浪微博"></a>
                    <a class="bds_weixin" data-cmd="weixin" title="分享到微信"></a>
                    <a class="bds_sqq" data-cmd="sqq" title="分享到QQ好友"></a>
                </div>
            </div>
        </div>
    </div>
    <!--遮罩-->
    <div class="blog-mask animated layui-hide"></div>
    <script type="text/javascript">
        $(function () {
            $("#menu_ul").find("li").each(function () {
                if ('@ViewBag.Title' == $(this).attr("id")) {
                    $(this).removeClass().attr("class", "layui-nav-item layui-this")
                } else {
                    $(this).removeClass().attr("class", "layui-nav-item")
                }
            })
        })
    </script>
</body>
</html>
